<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">1

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상일미디어고등학교"
            android:textSize="45dp"
            android:textStyle="bold|italic"
            android:textColor="#37DAB9"
            android:typeface="serif"/>


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상일미디어고등학교\n전공동아리 김띠규"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#F33737"
            android:fontFamily="@font/maplestorybold"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼 연습"
            android:textSize="25dp"
            android:fontFamily="@font/kcceunyoung"
            android:backgroundTint="#2B2B2B"/>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="radio1"
                android:textSize="25dp"
                android:fontFamily="@font/typodecosolidslash"
                android:layout_marginRight="20dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="radio2"
                android:textSize="25dp"
                android:fontFamily="@font/typodecosolidslash"
                android:layout_marginLeft="20dp"
                android:checked="false"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="checkBox"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:fontFamily="@font/typodecosolidslash"
            android:checked="true"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="edit_text 테스트"
            android:inputType="number"
            android:ems="15"/>

    </LinearLayout>
</LinearLayout>